<div class ="content">
  <div>
    <h2>{{ user.username }}</h2>
  </div>
  <div>
      <img src={{ user.profile_picture}} alt="profile picture"><br>
  </div>
  <div>
    <form class="user-form" action="" method="post">
      <!--don't kow if this is right-->
      <input type="hidden" name="_id" value="{{user._id}}">
      <p>
      <input type="text" name="Name" placeholder="" value="{{ user.full_name }}">
    </p>
    <p>
      <input type="email" name="email address" placeholder="" value="{{user.email}}">
    </p>
    <p>
      <textarea rows="8" name="bio" placeholder="">{{user.bio}}</textarea>
    </p>
    <p>
      <button class="button" type="button">Save</button>
    </p>
    </form>
    {{#if success}}
    <p style="color: green;">
      {{success}}
    </p>
    {{/if}}
  </div>
</div>
